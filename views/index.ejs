<%- include('partials/head.ejs') %>

		<main>
			<% if (!user) { %>
			<div class="login">
				<a href="/login">Login</a>
			</div>
			<% } else { %>
			<nav>
				<a href="/logout">Log Out</a>
			</nav>
			<div class="left">
				<h2>Hello <%= user.username %></h2>
				<h2>Get in touch!</h2>

				<form action="/" method="post" enctype="application/json">
					<label for="song">Song:</label>
					<input id="song" type="text" name="song" placeholder="voeg jouw spotify nummer toe"/>
					<button type="submit">Zoek</button>
				</form>
				<% if (dataSongs !== undefined) { %>
				<% for (var i = 0; i < dataSongs.items.length; i++) { %>
				<ul>
						<img src="<%= dataSongs.items[i].album.images[1].url %>" alt=""/>
						<li><%= dataSongs.items[i].name %></li>
						<li><%= dataSongs.items[i].artists[0].name %> </li>
						<p class="hide"><%= dataSongs.items[i].id %></p>
						<p class="hide"><%= dataSongs.items[i].artists[0].id %></p>
					<% if (dataSongs.items[i].preview_url !== null) { %>
						<a target="_blank" href="<%= dataSongs.items[i].preview_url %>">Link</a>
					<% } %>
						<!-- <form class="add" action="/" method="post" enctype="application/json"> -->
							<input class="hide" name="value" value="<%= dataSongs.items[i].id %>"/>
							<button type="submit" class="add">Add</button>
						<!-- </form> -->
				</ul>
			 <% }} %>
			</div>
			<div class="right">
				<h1>Suus haar playlist</h1>
				<div class="playlist">
					<ul>
						<% if (playlist !== undefined) { %>
						<% for (var i = 0; i < playlist.length; i++) { %>
						<li><%= playlist[i].artist %> - <%= playlist[i].track %></li>
						<% }} %>
					</ul>
				</div>
				<% if (user.username == "suustenvoorde") { %>
				 <button>Publish playlist</button>
			 <% } %>
			</div>
		<% }%>
		</main>
		<script>
			window.user = <%- JSON.stringify(user || null) %>;
		</script>
<%- include('partials/foot.ejs') %>
